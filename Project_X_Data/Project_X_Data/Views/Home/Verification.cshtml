@model Project_X_Data.Models.LogInOut.VerificationModel;


<div class="container mt-5 mb-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 512px;">
        <h2 class="text-center mb-4">Email Verification</h2>

        <form asp-action="Verification" asp-controller="Home" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" placeholder="Enter verification code" />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Verify</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-3">@ViewBag.Message</div>
            }
        </form>

        <p class="text-center small mt-3">
            Didn't receive the code? <a href="/Account/Registration">Resend</a>
        </p>
    </div>
</div>